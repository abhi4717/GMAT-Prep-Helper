@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="@Url.Content("~/Style/jQueryMobile/jquery.mobile.theme-1.3.2.min.css")"/>
    <link rel="stylesheet" href="@Url.Content("~/Style/jQueryMobile/jquery.mobile.structure-1.3.2.min.css")" />
    <script src="@Url.Content("~/Scripts/lib/jquery-1.9.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/lib/jquery.mobile-1.3.2.min.js")"></script>
</head>
<body>
    <div data-role="page" data-theme="b">
        <div data-role="header" data-fullscreen="true" class="ui-header ui-bar-c" role="banner">
            <h1 class="ui-title" role="heading" aria-level="1">Test</h1>
            <div>@ViewBag.PageHeader</div>
        </div>
        <div data-role="content">
            <form>
                @RenderBody()
            </form>
        </div>
    </div>

</body>
</html>
